<h1>Sign In</h1>

<div class="sign-in-form">
  <%= form_for :session, url: session_path do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign in", class: "sign-in-button" %>
    </div>
  <% end %>
</div>
