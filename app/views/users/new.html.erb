<div class="sign-up-form">
  <h1>Sign Up</h1>
  <%= form_for @user do |form| %>

    <% if @user.errors.any? %>
      <%= render "errors/errors", errors: @user.errors %>
    <% end %>

    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign up", class: "create-account-button" %>
    </div>
  <% end %>
</div>
