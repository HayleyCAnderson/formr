<div class="each-survey">
  <h2><%= survey.name %></h2>

  <h3>Share Survey: <%= link_to survey_url(survey), survey_url(survey) %></h3>

  <%= button_to "Delete Survey", survey_path(survey), method: :delete, data: { confirm: "Are you sure you want to delete this survey?" }, :class => "delete-survey-button" %>

  <%= button_to "Edit Survey", edit_survey_path(survey), method: :get, :class => "edit-survey-button" %>
</div>
