<% survey.questions.each do |question| %>
  <p><%= question.content %><p>
  <ul>
    <% question.answers.each do |answer| %>
      <li>
        <div class="bar" style="width:<%= answered_fraction(question, answer) * 20 %>em"></div>
        <%= answer.choice %>: <%= answer.results_count %>
      </li>
    <% end %>
  </ul>
<% end %>
